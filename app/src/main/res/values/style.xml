<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="backgroundTint">#f4fbfb</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="select_button" parent="menu_button">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="word_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="details_word_style" parent="word_style">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="meaning_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#7dd1ce</item>
    </style>

    <style name="details_meaning_style" parent="meaning_style">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="sentence_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="details_sentence_style" parent="sentence_style">
        <item name="android:textSize">25sp</item>
    </style>


</resources>